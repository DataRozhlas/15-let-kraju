@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  font-family Roboto, helvetica, arial, sans-serif
  float left
  .map
    position absolute
    width 470px
    top 125px
    margin-left 30px
    svg
      .mesh
        fill none
        stroke black
        stroke rgb(103,0,13)
      path.highlight
        fill ColorBlue
      path:hover
        opacity 0.8
  .barchart
    position absolute
    width 490px
    right 0px
    margin-top 25px
    h3
      float left
      width 100%
      position absolute
      top -25px
      margin 0px
      padding 0px
      padding-left 170px
    .row
      position absolute
      transition top 0.6s
      width 100%
      padding 5px 0px
      .bar-container
        width 100%
        position absolute
        top 0px
        left 0px
        bottom 0px
        padding-left 170px
        .bar
          height 100%
          position relative
          transition width 0.6s
          .fill
            position absolute
            top 4px
            bottom @top
            background ColorBlue
            width 100%
            border-top-right-radius 4px
            border-bottom-right-radius 4px
          .label
            position absolute
            white-space nowrap
            top 0px
            left 100%
            padding 5px 0px 5px 10px
      &.highlight
        font-weight bold
        .bar-container .bar .fill
          background ColorRed
      &:hover
        font-weight bold
      .name
        display block
        width 150px
        text-align right

  .selector
    position relative
    z-index 2s
    h2
      font-size 14px
      margin 0px
      padding 0px
      float left
    ul
      float left
      margin 0px
      padding 0px
      list-style-type none
      width 420px
      margin-left 10px
      li
        padding 0px
        float left
        padding-left 5px
        margin-bottom 3px
        &:after
          content: ", "
        &:last-child:after
          display none
        &.active
          a
            text-decoration none
            color black
